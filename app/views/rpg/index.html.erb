<div class='w3-container'>
	<h1 class="w3-text-shadow w3-teal w3-center w3-opacity w3-margin-bottom w3-padding">Ninja Gold</h1>
	
	<div class="w3-row w3-padding-32">
		<h4 class=" w3-col s1 w3-center w3-text-shadow">Your Gold: </h4>
		<h4 class='w3-border w3-col s1 w3-center'><%= session[:gold] %></h4>
	</div>
		
	<form action="/rpg/farm" method="post" class="w3-card-4 w3-tag w3-large w3-padding w3-light-grey w3-center w3-border w3-round w3-margin-right">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<h3 class="w3-slim">Farm</h3>
		<p class="w3-opacity">(earns 10-20 golds)</p>
		<input class= 'w3-card-4' type="submit" value="Find Gold!">
	</form>

	<form action="/rpg/cave" method="post" class="w3-card-4 w3-tag w3-large w3-padding w3-light-grey w3-center w3-border w3-round w3-margin-right">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<h3>Cave</h3>
		<p class="w3-opacity">(earns 5-10 golds)</p>
		<input class="w3-card-4" type="submit" value="Find Gold!">
	</form>

	<form action="/rpg/house" method="post" class="w3-card-4 w3-tag w3-large w3-padding w3-light-grey w3-center w3-border w3-round w3-margin-right">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<h3>House</h3>
		<p class="w3-opacity">(earns 2-5 golds)</p>
		<input type="submit" class="w3-card-4" value="Find Gold!">
	</form>

	<form action="/rpg/casino" method="post" class="w3-card-4 w3-tag w3-large w3-padding w3-light-grey w3-center w3-border w3-round">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<h3>Casino</h3>
		<p class="w3-opacity">(earns/takes 0-50 golds)</p>
		<input class="w3-card-4" type="submit" value="Find Gold!">
	</form>

	<h4 class="w3-text-shadow w3-margin-top">Activities:</h4>
	<div id="activities">
		<textarea rows="7" cols="90">
				<% session[:activities].reverse.take(5).reverse.each  do |activity|   %>
					<%= activity %>		
				<% end %>
		</textarea>
	</div>
	<a href="/rpg/logout" class="w3-btn w3-teal w3-padding" style="margin-bottom:200px;">Restart game!</a>
</div>